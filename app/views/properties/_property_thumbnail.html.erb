<div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
  <%= link_to property_path(property) do %>
    <div class="p-4">
        <%# image_tag "https://b740574.smushcdn.com/740574/wp-content/uploads/2023/03/Linea-45.jpg?lossy=1&strip=1&webp=1", alt: "#{property.address} image", class: "w-full h-48 object-cover" %>
        <h3 class="text-lg font-semibold text-gray-800 hover:text-rose-600 transition-colors duration-200"><%= property.address %></h3>
        <p class="text-gray-600"><%= property.city %>, <%= property.state %></p>
        <p class="text-gray-600"><%= property.num_units_string %></p>
    </div>
  <% end %>
</div>
